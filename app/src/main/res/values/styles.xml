<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_dark_material_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/design_default_color_primary</item>
    </style>
    <style name="btn" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="listView" parent="Widget.AppCompat.ListView">
        <item name="color">@color/colorPrimaryDark</item>
    </style>
    <style name="vt_table" >
        <!--        <item name="android:textColor">#fff</item>-->
        <!--        <item name="android:background">7fc342</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="vt_table_bold" >
        <!--        <item name="android:textColor">#fff</item>-->
        <!--        <item name="android:background">7fc342</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>

    </style>
</resources>